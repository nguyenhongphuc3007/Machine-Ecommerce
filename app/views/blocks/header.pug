- var menubar = ["TRANG CHỦ","GIỚI THIỆU","SẢN PHẨM","TIN KHUYẾN MÃI","DỊCH VỤ","LIÊN HỆ"];
- var icon = ["fa fa-facebook","fa fa-google-plus","fa fa-instagram","fa fa-twitter"]

.navtop    
	.container
		.wrapper
			.navtop__icon
				.btn-group
					for name in icon
						button
							i(class=name)
			.navtop__entry
				.btn-group
					button ĐĂNG KÍ
					button ĐĂNG NHẬP
.navmiddle
	.container
		.wrapper
			.navmiddle__logo
				img(src="images/company.jpg", alt="")
			.navmiddle__phone
				.navmiddle__phone--hotline
					h6  HOTLINE:
					p  (04) 9500 9650 - (04) 9500 9650
				.navmiddle__phone--ship
					h6  ĐẶT HÀNG NHANH:
					p  (04) 9500 9650 - (04) 9500 9650
				.navmiddle__phone--search
					form(action="")
						span.i.fa.fa-search
						input(type="search" placeholder="Tìm kiếm...")
				
.menu
	.container
		.wrapper
			.menu__bar
				.btn-group
				for name in menubar
					button= name
			.menu__cart
				button
					i.fa.fa-shopping-basket.basket
						span.dot 0